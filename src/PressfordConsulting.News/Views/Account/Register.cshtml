@model PressfordConsulting.News.Models.RegisterViewModel
@{
    ViewBag.Title = "Register | Pressford Consulting";
}
<h1 class="header center teal-text text-lighten-2">Register</h1>
<div class="row center">
    <p>Sign up for an account to view the latest news.</p>
</div>

<div class="row">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col s12", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "red-text" })
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Email, new { @class = "validate", @type = "email" })
                @Html.LabelFor(m => m.Email, new { @for = "email" })
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Password, new { @class = "validate", @type = "password" })
                @Html.LabelFor(m => m.Password, new { @for = "password" })
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "validate", @type = "password" })
                @Html.LabelFor(m => m.ConfirmPassword, new { @for = "passwordConfirm" })
            </div>
        </div>
        <div clss="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Submit
            </button>
        </div>
    }
</div>
