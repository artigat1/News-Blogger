@model PressfordConsulting.News.Models.ArticleViewModel
@{
    ViewBag.Title = "Edit Article | Pressford Consulting";
}

<h1 class="header center teal-text text-lighten-2">Edit Article</h1>

<div class="row">
    @using (Html.BeginForm("Edit", "Article", FormMethod.Post, new { @class = "col s12 ", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "red-text" })
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Title, new { @class = "validate", @Value = Model.Title })
                @Html.LabelFor(m => m.Title, new { @for = "title" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "red-text" })
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Image, new { @class = "validate" })
                @Html.LabelFor(m => m.Image, new { @for = "image" })
                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "red-text" })
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.TextAreaFor(m => m.Content, new { @class = "validate", @id = "editor", @Value = Model.Content })
                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "red-text" })
            </div>
        </div>
        <div clss="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Update
            </button>
        </div>
    }
</div>

@section Scripts{
    <script src="~/Content/dist/js/froala-editor-bundle.min.js" type="text/javascript"></script>
    <script src="~/Content/dist/js/site-bundle.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            NewsApp.Editor.init('#editor');
        });
    </script>
}